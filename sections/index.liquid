{% stylesheet %}
  .hero-section {
    position: relative;
    width: 100%;
    height: 100vh;
    min-height: 600px;
    overflow: hidden;
  }

  .video-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .hero-video {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100vw;
    height: 56.25vw;
    min-height: 100vh;
    min-width: 177.77vh;
    transform: translate(-50%, -50%);
    z-index: 1;
  }

  .video-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0.4) 50%, rgba(0, 0, 0, 0.9) 100%);
    z-index: 2;
  }

  .hero-content {
    position: relative;
    z-index: 3;
    height: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 2rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  .band-name {
    font-size: clamp(3rem, 10vw, 8rem);
    font-weight: 900;
    letter-spacing: -0.05em;
    text-transform: uppercase;
    color: #fff;
    margin: 0;
    line-height: 0.9;
    text-shadow: 3px 3px 0 #000, -3px -3px 0 #000, 3px -3px 0 #000, -3px 3px 0 #000, 0 0 30px rgba(255, 255, 255, 0.3);
    animation: glitch 3s infinite;
  }

  @keyframes glitch {
    0%,
    100% {
      text-shadow: 3px 3px 0 #000, -3px -3px 0 #000, 3px -3px 0 #000, -3px 3px 0 #000, 0 0 30px rgba(255, 255, 255, 0.3);
    }
    97% {
      text-shadow: 3px 3px 0 #000, -3px -3px 0 #000, 3px -3px 0 #000, -3px 3px 0 #000, 0 0 30px rgba(255, 255, 255, 0.3);
    }
    98% {
      text-shadow: -5px 0 0 rgba(255, 255, 255, 0.5), 5px 0 0 rgba(128, 128, 128, 0.5), 3px 3px 0 #000, -3px -3px 0 #000,
        0 0 30px rgba(255, 255, 255, 0.5);
    }
    99% {
      text-shadow: 3px 3px 0 #000, -3px -3px 0 #000, 3px -3px 0 #000, -3px 3px 0 #000, 0 0 30px rgba(255, 255, 255, 0.3);
    }
  }

  .announcement {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
  }

  .album-title {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 0 0 0.5rem 0;
    line-height: 1;
  }

  .album-subtitle {
    font-size: clamp(0.9rem, 2vw, 1.2rem);
    text-transform: uppercase;
    letter-spacing: 0.3em;
    color: #888;
    margin: 0;
    font-weight: 300;
  }

  .platform-links {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
    flex-wrap: wrap;
    justify-content: flex-start;
  }

  .platform-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: transparent;
    border: 2px solid #fff;
    transition: all 0.3s ease;
    position: relative;
  }

  .platform-link svg {
    width: 24px;
    height: 24px;
    fill: #fff;
    transition: transform 0.3s ease;
  }

  .platform-link:hover {
    transform: scale(1.1);
    background: rgba(255, 255, 255, 0.1);
    box-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
  }

  .platform-link:hover svg {
    transform: scale(1.1);
  }

  .platform-link.spotify:hover {
    border-color: #1db954;
    box-shadow: 0 0 20px rgba(29, 185, 84, 0.5);
  }

  .platform-link.apple-music:hover {
    border-color: #fa2e4e;
    box-shadow: 0 0 20px rgba(250, 46, 78, 0.5);
  }

  .platform-link.youtube:hover {
    border-color: #ff0000;
    box-shadow: 0 0 20px rgba(255, 0, 0, 0.5);
  }

  .platform-link:active {
    transform: scale(0.95);
  }

  .lyrics {
    max-width: 500px;
    color: #fff;
    font-size: 1.1rem;
    line-height: 1.8;
    text-align: left;
    background: rgba(0, 0, 0, 0.6);
    padding: 2rem;
    border-radius: 8px;
    backdrop-filter: blur(10px);
  }

  .lyrics p {
    margin: 0 0 1rem 0;
  }

  .lyrics p:last-child {
    margin-bottom: 0;
  }

  @media (max-width: 768px) {
    .hero-content {
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      padding: 1rem;
    }

    .announcement {
      align-items: center;
    }

    .platform-links {
      justify-content: center;
      gap: 1rem;
    }

    .lyrics {
      margin-top: 2rem;
      text-align: left;
      max-width: 100%;
    }
  }
{% endstylesheet %}

{% schema %}
