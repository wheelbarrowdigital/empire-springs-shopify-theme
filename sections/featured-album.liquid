<!-- Hero Section with Background Video -->
<div class="relative w-full min-h-[85vh] overflow-hidden flex items-end px-8 md:px-12 lg:px-20 py-12 md:py-16 lg:py-20">
  <!-- Video Container -->
  <div class="absolute inset-0 z-10">
    {% if section.settings.video_url %}
      {% assign video_id = section.settings.video_url | split: 'v=' | last | split: '&' | first | split: '/' | last %}
      <iframe
        class="absolute top-1/2 left-1/2 w-[100vw] h-[56.25vw] min-h-screen min-w-[177.77vh] -translate-x-1/2 -translate-y-1/2 object-cover"
        src="https://www.youtube.com/embed/{{ video_id }}?autoplay=1&mute=1&loop=1&playlist={{ video_id }}&controls=0&showinfo=0&rel=0&modestbranding=1"
        frameborder="0"
        allow="autoplay; encrypted-media"
        allowfullscreen
      >
      </iframe>
    {% elsif section.settings.video_embed %}
      {{ section.settings.video_embed }}
    {% endif %}
    <!-- Video Overlay -->
    <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/30 to-black/80 z-20"></div>
  </div>

  <!-- Hero Content -->
  <div class="w-full relative z-30 flex flex-row justify-between items-end gap-8">
    <!-- Announcement Section -->
    <div class="text-left">
      {% if section.settings.subtitle_text %}
        <p class="text-xs md:text-sm uppercase tracking-[0.3em] text-white/50 font-light">
          {{ section.settings.subtitle_text }}
        </p>
      {% endif %}
      <h1 class="text-5xl md:text-7xl lg:text-8xl 2xl:text-9xl text-white font-black uppercase tracking-tight mt-3 leading-[0.85]">
        {{ section.settings.album_name }}
      </h1>

      <!-- Platform Links -->
      <div class="mt-6 md:mt-8 flex gap-4 md:gap-6 flex-wrap">
        {% if section.settings.spotify_url %}
          <a
            href="{{ section.settings.spotify_url }}"
            class="inline-flex items-center justify-center w-12 h-12 transition-all duration-300 hover:scale-110"
            target="_blank"
            rel="noopener"
            aria-label="Listen on Spotify"
          >
            <svg
              class="w-12 h-12 fill-white hover:fill-[#1ED760] transition-colors"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
