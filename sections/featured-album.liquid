{% schema %}
{
  "name": "Featured Album",
  "tag": "section",
  "class": "featured-album",
  "settings": [
    {
      "type": "header",
      "content": "Video Background"
    },
    {
      "type": "text",
      "id": "video_url",
      "label": "YouTube Video URL",
      "info": "Enter a YouTube URL (e.g., https://www.youtube.com/watch?v=VIDEO_ID)",
      "default": "https://www.youtube.com/watch?v=_faV3W_mheM"
    },
    {
      "type": "html",
      "id": "video_embed",
      "label": "Custom Video Embed Code",
      "info": "Alternative: Paste custom iframe embed code (overrides YouTube URL)"
    },
    {
      "type": "header",
      "content": "Album Information"
    },
    {
      "type": "text",
      "id": "subtitle_text",
      "label": "Subtitle Text",
      "default": "New Album Out Now",
      "info": "Small text above the album name"
    },
    {
      "type": "text",
      "id": "album_name",
      "label": "Album Name",
      "default": "Empire Springs"
    },
    {
      "type": "richtext",
      "id": "side_text",
      "label": "Side Text (Optional)",
      "info": "Text displayed on the right side of the hero (hidden on mobile)"
    },
    {
      "type": "header",
      "content": "Streaming Platform Links"
    },
    {
      "type": "url",
      "id": "spotify_url",
      "label": "Spotify URL"
    },
    {
      "type": "url",
      "id": "apple_music_url",
      "label": "Apple Music URL"
    },
    {
      "type": "url",
      "id": "youtube_url",
      "label": "YouTube Music URL"
    },
    {
      "type": "url",
      "id": "soundcloud_url",
      "label": "SoundCloud URL"
    },
    {
      "type": "url",
      "id": "bandcamp_url",
      "label": "Bandcamp URL"
    },
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "range",
      "id": "section_height",
      "label": "Section Height (vh)",
      "min": 50,
      "max": 100,
      "step": 5,
      "default": 85,
      "unit": "vh",
      "info": "Height of the hero section as percentage of viewport height"
    },
    {
      "type": "select",
      "id": "overlay_opacity",
      "label": "Video Overlay Darkness",
      "options": [
        {
          "value": "light",
          "label": "Light"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "dark",
          "label": "Dark"
        }
      ],
      "default": "medium"
    }
  ],
  "presets": [
    {
      "name": "Featured Album",
      "category": "Hero"
    }
  ]
}
{% endschema %}
