<header class="fixed top-0 left-0 right-0 z-50 bg-black/95 backdrop-blur-sm border-b border-white/10">
  <div class="px-8 md:px-12 lg:px-20 py-6">
    <div class="flex items-center justify-between">
      <!-- Logo/Brand Name -->
      <a
        href="{{ routes.root_url }}"
        class="w-8 text-white text-2xl md:text-3xl font-black uppercase tracking-wider hover:text-white/80 transition-colors"
      >
        <svg class="fill-[currentColor]" viewBox="0 0 300 249" xmlns="http://www.w3.org/2000/svg">
          <path d="M138 209L150 176.5L162 209C162 209 182.007 214.516 191 222.5C199.993 230.484 207.5 248.5 207.5 248.5H240C240 248.5 248.28 202.54 257 174C265.72 145.46 300 72.5 300 72.5L220.5 137C220.5 137 232.258 137.5 234 144C235.742 150.5 223 181 209 181C195 181 175.5 126.83 173 117.5C170.5 108.17 185 108.5 185 108.5L150 0L115 108.5C115 108.5 129.5 108.17 127 117.5C124.5 126.83 105 181 91 181C77 181 64.2583 150.5 66 144C67.7417 137.5 79.5 137 79.5 137L0 72.5C0 72.5 34.2805 145.46 43 174C51.7195 202.54 60 248.5 60 248.5H92.5C92.5 248.5 100.007 230.484 109 222.5C117.993 214.516 138 209 138 209Z" />
        </svg>
      </a>

      <!-- Navigation Menu - Desktop -->
      <nav class="header__menu hidden lg:flex items-center gap-8">
        {% for link in section.settings.menu.links %}
          <a
            href="{{ link.url }}"
            class="text-white/70 uppercase text-sm tracking-[0.2em] hover:text-white transition-colors font-medium"
          >
            {{ link.title }}
          </a>
        {% endfor %}
      </nav>

      <!-- Right Side Icons -->
      <div class="header__icons flex items-center gap-6">
        <!-- Search Icon -->
        <a href="{{ routes.search_url }}" class="text-white/70 hover:text-white transition-colors" aria-label="Search">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
        </a>

        {% if shop.customer_accounts_enabled %}
          <a
            href="{{ routes.account_url }}"
            class="text-white/70 hover:text-white transition-colors"
            aria-label="Account"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
          </a>
        {% endif %}

        <!-- Cart Icon -->
        <a
          href="{{ routes.cart_url }}"
          class="relative text-white/70 hover:text-white transition-colors"
          aria-label="Cart"
        >
          {% if cart.item_count > 0 %}
            <span class="absolute -top-2 -right-2 bg-white text-black text-xs font-bold rounded-full w-5 h-5 flex items-center justify-center">
              {{ cart.item_count }}
            </span>
          {% endif %}
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
          </svg>
        </a>

        <!-- Mobile Menu Toggle -->
        <button
          class="lg:hidden text-white/70 hover:text-white transition-colors"
          aria-label="Menu"
          onclick="toggleMobileMenu()"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <nav id="mobile-menu" class="lg:hidden hidden bg-black border-t border-white/10">
    <div class="px-8 py-6 space-y-4">
      {% for link in section.settings.menu.links %}
        <a
          href="{{ link.url }}"
          class="block text-white/70 uppercase text-sm tracking-[0.2em] hover:text-white transition-colors font-medium"
        >
          {{ link.title }}
        </a>
      {% endfor %}
    </div>
  </nav>
</header>

<!-- Add padding to body to account for fixed header -->
<div class="h-16"></div>

<script>
  function toggleMobileMenu() {
    const menu = document.getElementById('mobile-menu');
    menu.classList.toggle('hidden');
  }
</script>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
    }
  ]
}
{% endschema %}
