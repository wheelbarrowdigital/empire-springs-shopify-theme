<!-- Collection Hero -->
{% if section.settings.show_collection_hero %}
  <div class="relative w-full {{ section.settings.hero_height }} bg-black overflow-hidden">
    {% if collection.image %}
      <img
        src="{{ collection.image | image_url: width: 2000 }}"
        alt="{{ collection.title | escape }}"
        class="w-full h-full object-cover opacity-60"
        width="2000"
        height="{{ 2000 | divided_by: collection.image.aspect_ratio | round }}"
      >
      <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>
    {% else %}
      <div class="absolute inset-0 bg-gradient-to-br from-zinc-900 to-black"></div>
    {% endif %}

    <div class="absolute inset-0 flex items-end px-8 md:px-12 lg:px-20 pb-12 md:pb-16">
      <div class="max-w-4xl">
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-black uppercase tracking-tight text-white mb-4">
          {{ collection.title }}
        </h1>
        {% if collection.description != blank %}
          <div class="text-white/70 text-lg max-w-2xl">
            {{ collection.description }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
{% else %}
  <div class="px-8 md:px-12 lg:px-20 py-12 md:py-16 bg-white">
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-black uppercase tracking-tight text-black">
      {{ collection.title }}
    </h1>
    {% if collection.description != blank %}
      <div class="text-zinc-600 mt-4 max-w-3xl">
        {{ collection.description }}
      </div>
    {% endif %}
  </div>
{% endif %}

<!-- Toolbar -->
<div class="relative border-b border-zinc-200 px-8 md:px-12 lg:px-20 py-4">
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
    <!-- Product Count -->
    <div class="text-sm font-medium uppercase tracking-wider text-zinc-700">
      {{ collection.products_count }}
      {% if collection.products_count == 1 %}
        Product
      {% else %}
        Products
      {% endif %}
    </div>

    <div class="flex items-center gap-3">
      <!-- Sort -->
      {% if section.settings.enable_sorting %}
        {% assign current_sort = collection.sort_by | default: collection.default_sort_by %}
        <div class="flex items-center">
          <label for="sort-by" class="hidden sm:block text-sm font-medium uppercase tracking-wider text-zinc-600 mr-2"
            >Sort:</label
          >
          <form class="relative" method="get">
            <select
              id="sort-by"
              name="sort_by"
              class="px-4 py-2.5 pr-10 border border-zinc-300 bg-white uppercase text-sm font-medium tracking-wider focus:outline-none focus:border-black appearance-none cursor-pointer min-w-[140px] sm:min-w-[180px]"
              onchange="this.form.submit()"
            >
              <option
                value="manual"
                {% if current_sort == 'manual' %}
                  selected
                {% endif %}
              >
                Featured
              </option>
              <option
                value="best-selling"
                {% if current_sort == 'best-selling' %}
                  selected
                {% endif %}
              >
                Best Selling
              </option>
              <option
                value="title-ascending"
                {% if current_sort == 'title-ascending' %}
                  selected
                {% endif %}
              >
                Name: A-Z
              </option>
              <option
                value="title-descending"
                {% if current_sort == 'title-descending' %}
                  selected
                {% endif %}
              >
                Name: Z-A
              </option>
              <option
                value="price-ascending"
                {% if current_sort == 'price-ascending' %}
                  selected
                {% endif %}
              >
                Price: Low to High
              </option>
              <option
                value="price-descending"
                {% if current_sort == 'price-descending' %}
                  selected
                {% endif %}
              >
                Price: High to Low
              </option>
              <option
                value="created-ascending"
                {% if current_sort == 'created-ascending' %}
                  selected
                {% endif %}
              >
                Date: Old to New
              </option>
              <option
                value="created-descending"
                {% if current_sort == 'created-descending' %}
                  selected
                {% endif %}
              >
                Date: New to Old
              </option>
            </select>
            <div class="absolute right-3 top-1/2 -translate-y-1/2 pointer-events-none">
              <svg class="w-4 h-4 text-zinc-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </div>
          </form>
        </div>
      {% endif %}

      <!-- View Toggle -->
      {% if section.settings.enable_view_toggle %}
        <div class="hidden sm:flex border border-zinc-300 bg-white">
          <button
            type="button"
            class="px-3 py-2.5 hover:bg-zinc-50 transition-colors view-toggle-grid"
            onclick="document.querySelector('.products-grid').className = document.querySelector('.products-grid').className.replace(/grid-cols-\d+/g, 'grid-cols-{{ section.settings.products_per_row_desktop }}')"
            aria-label="Grid view"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path d="M3 3h6v6H3V3zm0 8h6v6H3v-6zm8-8h6v6h-6V3zm0 8h6v6h-6v-6z"/>
            </svg>
          </button>
          <button
            type="button"
            class="px-3 py-2.5 hover:bg-zinc-50 transition-colors view-toggle-list border-l border-zinc-300"
            onclick="document.querySelector('.products-grid').className = document.querySelector('.products-grid').className.replace(/grid-cols-\d+/g, 'grid-cols-1')"
            aria-label="List view"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path d="M3 4h14v2H3V4zm0 5h14v2H3V9zm0 5h14v2H3v-2z"/>
            </svg>
          </button>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<!-- Main Content Area -->
<div class="relative">
  <!-- Products Grid -->
  <div class="px-8 md:px-12 lg:px-20 py-8">
    {% paginate collection.products by section.settings.products_per_page %}
      {% if collection.products.size > 0 %}
        <div class="products-grid grid grid-cols-1 md:grid-cols-{{ section.settings.products_per_row_mobile }} lg:grid-cols-{{ section.settings.products_per_row_desktop }} gap-6 lg:gap-8">
          {% for product in collection.products %}
            <div class="group product-card">
              <a href="{{ product.url }}" class="block">
                <div class="relative overflow-hidden bg-zinc-100 aspect-square mb-4">
                  {% if product.featured_image %}
                    <img
                      src="{{ product.featured_image | image_url: width: 600, height: 600 }}"
                      alt="{{ product.title | escape }}"
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                      loading="lazy"
                      width="600"
                      height="600"
                    >
                    {% if product.images.size > 1 %}
                      <img
                        src="{{ product.images[1] | image_url: width: 600, height: 600 }}"
                        alt="{{ product.title | escape }}"
                        class="absolute inset-0 w-full h-full object-cover opacity-0 group-hover:opacity-100 transition-opacity duration-500"
                        loading="lazy"
                        width="600"
                        height="600"
                      >
                    {% endif %}
                  {% else %}
                    <div class="w-full h-full flex items-center justify-center">
                      <span class="text-zinc-500 uppercase tracking-widest text-sm">No Image</span>
                    </div>
                  {% endif %}

                  <!-- Badges -->
                  {% if product.available == false %}
                    <div class="absolute top-4 left-4 bg-black text-white px-3 py-1 text-xs uppercase tracking-wider">
                      Sold Out
                    </div>
                  {% elsif product.compare_at_price > product.price %}
                    {% assign discount = product.compare_at_price
                      | minus: product.price
                      | times: 100
                      | divided_by: product.compare_at_price
                      | round
                    %}
                    <div class="absolute top-4 left-4 bg-red-600 text-white px-3 py-1 text-xs uppercase tracking-wider">
                      {{ discount }}% Off
                    </div>
                  {% elsif section.settings.show_new_badge %}
                    {% assign days_since = 'now'
                      | date: '%s'
                      | minus: product.created_at
                      | date: '%s'
                      | divided_by: 86400
                    %}
                    {% if days_since <= section.settings.new_badge_days %}
                      <div class="absolute top-4 left-4 bg-green-600 text-white px-3 py-1 text-xs uppercase tracking-wider">
                        New
                      </div>
                    {% endif %}
                  {% endif %}

                  <!-- Quick View -->
                  {% if section.settings.enable_quick_view %}
                    <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity bg-black/20">
                      <button
                        type="button"
                        class="bg-white text-black px-4 py-2 uppercase text-sm tracking-wider hover:bg-zinc-100 transition-colors"
                      >
                        Quick View
                      </button>
                    </div>
                  {% endif %}
                </div>

                <!-- Product Info -->
                <div>
                  {% if section.settings.show_vendor %}
                    <p class="text-xs uppercase tracking-wider text-zinc-500 mb-1">{{ product.vendor }}</p>
                  {% endif %}

                  <h3 class="text-base font-bold uppercase tracking-wide mb-2">{{ product.title }}</h3>

                  <div class="flex items-center gap-2">
                    {% if product.compare_at_price > product.price %}
                      <span class="text-zinc-400 line-through">{{ product.compare_at_price | money }}</span>
                      <span class="text-red-600 font-bold">{{ product.price | money }}</span>
                    {% else %}
                      <span class="text-zinc-700">{{ product.price | money }}</span>
                    {% endif %}
                  </div>

                  <!-- Color Swatches -->
                  {% if section.settings.show_color_swatches %}
                    {% assign colors = product.options_with_values | where: 'name', 'Color' | first %}
                    {% if colors %}
                      <div class="flex gap-1 mt-3">
                        {% for value in colors.values limit: 5 %}
                          <span
                            class="w-6 h-6 rounded-full border border-zinc-300"
                            style="background-color: {{ value | handleize | replace: '-', '' }};"
                            title="{{ value }}"
                          ></span>
                        {% endfor %}
                        {% if colors.values.size > 5 %}
                          <span class="text-xs text-zinc-500">+{{ colors.values.size | minus: 5 }}</span>
                        {% endif %}
                      </div>
                    {% endif %}
                  {% endif %}
                </div>
              </a>

              <!-- Quick Add -->
              {% if section.settings.enable_quick_add and product.available %}
                <form action="{{ routes.cart_add_url }}" method="post" class="mt-3">
                  {% if product.has_only_default_variant %}
                    <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                    <button
                      type="submit"
                      class="w-full bg-black text-white py-2 px-4 uppercase tracking-wider text-sm hover:bg-zinc-800 transition-colors"
                    >
                      Add to Cart
                    </button>
                  {% else %}
                    <a
                      href="{{ product.url }}"
                      class="block w-full bg-zinc-200 text-black py-2 px-4 uppercase tracking-wider text-sm hover:bg-zinc-300 transition-colors text-center"
                    >
                      Select Options
                    </a>
                  {% endif %}
                </form>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      {% else %}
        <div class="text-center py-20">
          <h2 class="text-2xl font-bold uppercase tracking-wider mb-4">No Products Found</h2>
          <p class="text-zinc-600">Try adjusting your filters or search terms</p>
        </div>
      {% endif %}

      <!-- Pagination -->
      {% if paginate.pages > 1 %}
        <nav class="flex justify-center mt-12" aria-label="Pagination">
          <div class="flex gap-2">
            {% if paginate.previous %}
              <a
                href="{{ paginate.previous.url }}"
                class="px-4 py-2 bg-white border border-zinc-300 uppercase text-sm tracking-wider hover:bg-zinc-100 transition-colors"
              >
                Previous
              </a>
            {% endif %}

            {% for part in paginate.parts %}
              {% if part.is_link %}
                <a
                  href="{{ part.url }}"
                  class="px-4 py-2 bg-white border border-zinc-300 uppercase text-sm tracking-wider hover:bg-zinc-100 transition-colors"
                >
                  {{ part.title }}
                </a>
              {% else %}
                {% if part.title == paginate.current_page %}
                  <span class="px-4 py-2 bg-black text-white border border-black uppercase text-sm tracking-wider">
                    {{ part.title }}
                  </span>
                {% else %}
                  <span class="px-4 py-2 bg-white border border-zinc-300 uppercase text-sm tracking-wider">
                    {{ part.title }}
                  </span>
                {% endif %}
              {% endif %}
            {% endfor %}

            {% if paginate.next %}
              <a
                href="{{ paginate.next.url }}"
                class="px-4 py-2 bg-white border border-zinc-300 uppercase text-sm tracking-wider hover:bg-zinc-100 transition-colors"
              >
                Next
              </a>
            {% endif %}
          </div>
        </nav>
      {% endif %}
    {% endpaginate %}
  </div>
</div>

{% schema %}
{
  "name": "Collection",
  "settings": [
    {
      "type": "header",
      "content": "Hero Section"
    },
    {
      "type": "checkbox",
      "id": "show_collection_hero",
      "label": "Show Collection Hero",
      "default": true,
      "info": "Display hero section with collection image"
    },
    {
      "type": "select",
      "id": "hero_height",
      "label": "Hero Height",
      "options": [
        {
          "value": "h-64",
          "label": "Small"
        },
        {
          "value": "h-96",
          "label": "Medium"
        },
        {
          "value": "h-[32rem]",
          "label": "Large"
        }
      ],
      "default": "h-96"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "products_per_page",
      "label": "Products per Page",
      "min": 12,
      "max": 48,
      "step": 12,
      "default": 24
    },
    {
      "type": "select",
      "id": "products_per_row_desktop",
      "label": "Products per Row (Desktop)",
      "options": [
        {
          "value": "2",
          "label": "2"
        },
        {
          "value": "3",
          "label": "3"
        },
        {
          "value": "4",
          "label": "4"
        }
      ],
      "default": "3"
    },
    {
      "type": "select",
      "id": "products_per_row_mobile",
      "label": "Products per Row (Mobile)",
      "options": [
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "2",
          "label": "2"
        }
      ],
      "default": "2"
    },
    {
      "type": "header",
      "content": "Toolbar Options"
    },
    {
      "type": "checkbox",
      "id": "enable_sorting",
      "label": "Enable Sorting",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_filtering",
      "label": "Enable Filtering",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_view_toggle",
      "label": "Enable View Toggle",
      "default": false,
      "info": "Allow switching between grid and list view"
    },
    {
      "type": "header",
      "content": "Product Cards"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show Vendor",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_color_swatches",
      "label": "Show Color Swatches",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_quick_view",
      "label": "Enable Quick View",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "enable_quick_add",
      "label": "Enable Quick Add to Cart",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_new_badge",
      "label": "Show 'New' Badge",
      "default": true
    },
    {
      "type": "range",
      "id": "new_badge_days",
      "label": "Days to Show 'New' Badge",
      "min": 7,
      "max": 90,
      "step": 1,
      "default": 30,
      "info": "Products newer than this will show a 'New' badge"
    }
  ],
  "presets": [
    {
      "name": "Collection"
    }
  ]
}
{% endschema %}
