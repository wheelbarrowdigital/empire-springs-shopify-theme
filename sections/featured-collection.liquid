<div class="w-full bg-white text-black py-20 px-8 md:px-12 lg:px-20">
  <div class="max-w-7xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-4xl lg:text-5xl font-black uppercase tracking-tight">{{ section.settings.heading }}</h2>
      {% if section.settings.subheading %}
        <p class="mt-4 text-zinc-600 uppercase tracking-widest text-sm">{{ section.settings.subheading }}</p>
      {% endif %}
    </div>

    <!-- Products Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-{{ section.settings.products_per_row }} gap-8">
      {% assign product_limit = section.settings.product_limit | default: 6 %}
      {% if section.settings.collection %}
        {% for product in collections[section.settings.collection].products limit: product_limit %}
          <div class="group">
            <a href="{{ product.url }}" class="block">
              <div class="relative overflow-hidden bg-black aspect-square mb-4">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 600, height: 600 }}"
                    alt="{{ product.title | escape }}"
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                    loading="lazy"
                    width="600"
                    height="600"
                  >
                {% else %}
                  <div class="w-full h-full flex items-center justify-center">
                    <span class="text-zinc-700 uppercase tracking-widest">No Image</span>
                  </div>
                {% endif %}
                {% if product.available == false %}
                  <div class="absolute top-4 left-4 bg-black text-white px-3 py-1 text-xs uppercase tracking-wider">
                    Sold Out
                  </div>
                {% elsif product.compare_at_price > product.price %}
                  <div class="absolute top-4 left-4 bg-red-600 text-white px-3 py-1 text-xs uppercase tracking-wider">
                    Sale
                  </div>
                {% endif %}
              </div>
              <h3 class="text-lg font-bold uppercase tracking-wide">{{ product.title }}</h3>
              <div class="mt-1">
                {% if product.compare_at_price > product.price %}
                  <span class="text-zinc-400 line-through mr-2">{{ product.compare_at_price | money }}</span>
                  <span class="text-red-600 font-bold">{{ product.price | money }}</span>
                {% else %}
                  <span class="text-zinc-600">{{ product.price | money }}</span>
                {% endif %}
              </div>
            </a>
            {% if section.settings.show_quick_add and product.available %}
              <form action="/cart/add" method="post" class="mt-3">
                <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                <button type="submit" class="w-full bg-black text-white py-2 px-4 uppercase tracking-wider text-sm hover:bg-zinc-800 transition-colors">
                  Add to Cart
                </button>
              </form>
            {% endif %}
          </div>
        {% else %}
          <div class="col-span-full text-center py-12">
            <p class="text-zinc-500 uppercase tracking-widest">No products available</p>
          </div>
        {% endfor %}
      {% else %}
        <div class="col-span-full text-center py-12">
          <p class="text-zinc-500 uppercase tracking-widest">Please select a collection</p>
        </div>
      {% endif %}
    </div>

    <!-- View All Link -->
    {% if section.settings.show_view_all and section.settings.collection %}
      <div class="text-center mt-12">
        <a href="{{ collections[section.settings.collection].url }}" class="inline-block bg-black text-white px-8 py-3 uppercase tracking-wider hover:bg-zinc-800 transition-colors">
          View All {{ collections[section.settings.collection].title }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Featured Collection",
  "tag": "section",
  "class": "featured-collection",
  "settings": [
    {
      "type": "header",
      "content": "Section Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Featured Products"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "info": "Optional subheading below the main heading"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection",
      "info": "Select the collection to display products from"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "product_limit",
      "label": "Number of Products",
      "min": 2,
      "max": 24,
      "step": 1,
      "default": 6,
      "info": "Maximum number of products to display"
    },
    {
      "type": "select",
      "id": "products_per_row",
      "label": "Products per Row (Desktop)",
      "options": [
        {
          "value": "2",
          "label": "2"
        },
        {
          "value": "3",
          "label": "3"
        },
        {
          "value": "4",
          "label": "4"
        }
      ],
      "default": "3"
    },
    {
      "type": "header",
      "content": "Product Options"
    },
    {
      "type": "checkbox",
      "id": "show_quick_add",
      "label": "Show Quick Add Button",
      "default": false,
      "info": "Display 'Add to Cart' button for simple products"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View All' Link",
      "default": true,
      "info": "Display link to the full collection page"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection",
      "category": "Collection"
    }
  ]
}
{% endschema %}