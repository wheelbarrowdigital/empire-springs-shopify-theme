              <a
                href="{{ section.settings.social_twitter }}"
                target="_blank"
                rel="noopener"
                class="text-white/70 hover:text-white transition-colors"
                aria-label="Twitter"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
