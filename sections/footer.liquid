          </div>
        </div>

        <!-- Newsletter -->

        {% comment %}
          <div>
            <h3 class="text-sm uppercase tracking-[0.3em] text-white/50 mb-6">Newsletter</h3>
            <form action="/contact#newsletter" method="post" class="space-y-4">
              <input type="hidden" name="form_type" value="customer">
              <input type="hidden" name="utf8" value="✓">
              <input
                type="email"
                name="contact[email]"
                placeholder="Your email"
                required
                class="w-full bg-transparent border border-white/20 px-4 py-3 text-sm uppercase tracking-wider placeholder-white/30 focus:border-white/50 focus:outline-none transition-colors"
              >
              <button
                type="submit"
                class="w-full bg-white text-black px-4 py-3 text-sm uppercase tracking-wider font-bold hover:bg-white/90 transition-colors"
              >
                Subscribe
              </button>
            </form>
          </div>
        {% endcomment %}
      </div>

      <!-- Bottom Bar -->
      <div class="pt-8 border-t border-white/10">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
          <!-- Copyright -->
          <div class="text-white/50 text-sm">
            &copy; {{ 'now' | date: '%Y' }}
            Empire Springs. All rights reserved.
          </div>

          <div class="text-white/50 text-sm">
            Built by
            <a class="underline" href="https://www.wheelbarrowdigital.com" target="_blank" rel="noopener"
              >Wheelbarrow Digital</a
            >.
          </div>

          <!-- Payment Methods -->
          {% if section.settings.show_payment_icons and shop.enabled_payment_types != empty %}
            <div class="flex gap-3 items-center">
              {% for type in shop.enabled_payment_types %}
                <div class="text-white/30">
                  {{ type | payment_type_svg_tag: class: 'h-8' }}
                </div>
              {% endfor %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "textarea",
      "id": "footer_text",
      "label": "Footer Description",
      "default": "Official merchandise and music"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Footer Menu"
    },
    {
      "type": "header",
      "content": "Social Media"
    },
    {
      "type": "text",
      "id": "social_facebook",
      "label": "Facebook URL"
    },
    {
      "type": "text",
      "id": "social_instagram",
      "label": "Instagram URL"
    },
    {
      "type": "text",
      "id": "social_twitter",
      "label": "Twitter URL"
    },
    {
      "type": "text",
      "id": "social_youtube",
      "label": "YouTube URL"
    },
    {
      "type": "text",
      "id": "social_apple_music",
      "label": "Apple Music URL"
    },
    {
      "type": "text",
      "id": "social_spotify",
      "label": "Spotify URL"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true
    }
  ]
}
{% endschema %}
